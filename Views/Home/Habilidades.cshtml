@{
    ViewData["Title"] = "Portfólio";
    Layout = "_Layout";
}

@section Styles {
  <link rel="stylesheet" href="~/css/home.css">
  <link rel="stylesheet" href="~/css/Habilidades.css">
}

<section class="hero">
  <canvas id="particles-canvas"></canvas>
  <div class="hero-grid">
    
    <div class="hero-text">
      <h2>Habilidades</h2>

    </div>

    <div class="hero-photo">
      Entre em contato comigo para discutirmos assustos de sua relevância!
    </div>

  </div>
</section>
<section id="skills" class="section">
  <div class="skills">
    <span>HTML</span><span>CSS</span><span>JavaScript</span>
    <span>ASP.NET</span><span>SQL Server</span>
    <span>Figma</span><span>Git</span>
  </div>
</section>

<section id="projetos" class="section">
  <h3>Projetos</h3>

  <div class="cards">
    <div class="card">
      <h4>Aurum Legacy</h4>
      <p>E-commerce de carros usando ASP.NET Core e MVC.</p>
    </div>

    <div class="card">
      <h4>Totem E-commerce</h4>
      <p>Interface de autoatendimento inspirada em totens comerciais.</p>
    </div>

    <div class="card">
      <h4>Jogo em GDScript</h4>
      <p>Projeto de TCC com foco em lógica e gameplay.</p>
    </div>
  </div>
</section>


@section Scripts {
  <script src="~/js/home.js"></script>
}
